{
  "name": "ovac/guardrails",
  "description": "Operational approvals engine for Laravel applications.",
  "type": "library",
  "license": "MIT",
  "keywords": [
    "laravel",
    "approvals",
    "workflow",
    "human-in-the-loop",
    "moderation",
    "guardrails"
  ],
  "homepage": "https://github.com/ovac/guardrails",
  "support": {
    "issues": "https://github.com/ovac/guardrails/issues"
  },
  "require": {
    "php": "^8.2",
    "illuminate/support": "^11.0 || ^12.0 || ^13.0"
  },
  "require-dev": {
    "laravel/pint": "^1.14",
    "nunomaduro/collision": "^8.0",
    "larastan/larastan": "^3.0",
    "orchestra/testbench": "^9.0 || ^10.0",
    "pestphp/pest": "^3.0",
    "pestphp/pest-plugin-laravel": "^3.0",
    "phpstan/phpstan": "^2.0"
  },
  "autoload": {
    "psr-4": {
      "OVAC\\Guardrails\\": "src/"
    },
    "files": [
      "src/Support/helpers.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "OVAC\\Guardrails\\Tests\\": "tests/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "OVAC\\Guardrails\\GuardrailsServiceProvider"
      ]
    }
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  },
  "scripts": {
    "test": "pest -q",
    "test:coverage": "pest --coverage",
    "test:ci": "pest --coverage --coverage-clover=coverage.xml",
    "stan": "phpstan analyse --memory-limit=512M",
    "lint": "pint --test",
    "format": "pint"
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}